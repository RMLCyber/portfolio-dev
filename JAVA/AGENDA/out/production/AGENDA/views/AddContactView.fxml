<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.agenda.controller.AddContactController"
      spacing="15" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Ajouter un contact"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="nomField" promptText="Nom"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="telephoneField" promptText="Téléphone"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="saveButton" text="Enregistrer" onAction="#addContact"/>
        <Button fx:id="cancelButton" text="Annuler" onAction="#annulerFormulaire"/>
        <Button fx:id="searchButton" text="Rechercher" onAction="#rechercherContact"/>
        <Button fx:id="deleteButton" text="Supprimer" onAction="#supprimerContact"/>
    </HBox>

    <TableView fx:id="contactTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="nomColumn" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
            <TableColumn fx:id="telephoneColumn" text="Téléphone" prefWidth="150"/>
        </columns>
    </TableView>

    <Label fx:id="messageLabel" text="" style="-fx-text-fill: green;"/>
</VBox>
